# -------------------------------------------------
# Django core settings
# -------------------------------------------------
# A long, random string – never share it publicly.
SECRET_KEY=CHANGE_THIS_TO_A_RANDOM_64CHAR_STRING

# 0 = production, 1 = development.  Keep it 0 on the VPS.
DEBUG=0

# Domains that Django will accept in the Host header.
# Add any sub‑domains you intend to serve (e.g. www, api).
ALLOWED_HOSTS=prebuiltcomputers.uk,www.prebuiltcomputers.uk

# -------------------------------------------------
# PostgreSQL configuration (used by Django)
# -------------------------------------------------
POSTGRES_USER=django
POSTGRES_PASSWORD=CHANGE_THIS_TO_A_STRONG_PASSWORD
POSTGRES_DB=django
POSTGRES_HOST=db            # name of the service in docker‑compose
POSTGRES_PORT=5432

# If you prefer a single URL, keep this in sync with the vars above.
# Django’s `dj-database-url` will read it automatically.
DATABASE_URL=postgres://django:${POSTGRES_PASSWORD}@${POSTGRES_HOST}:${POSTGRES_PORT}/${POSTGRES_DB}

# -----------------------------------------------------------------
# CSRF / security – tell Django which origins are allowed to POST.
# -----------------------------------------------------------------
# Must be a comma‑separated list that includes the scheme.
CSRF_TRUSTED_ORIGINS=https://prebuiltcomputers.uk,https://www.prebuiltcomputers.uk

# -------------------------------------------------
# Stripe (payment gateway) – test keys for now.
# -------------------------------------------------
STRIPE_PUBLIC_KEY=pk_test_XXXXXXXXXXXXXXXXXXXXXXXX
STRIPE_SECRET_KEY=sk_test_XXXXXXXXXXXXXXXXXXXXXXXX
STRIPE_WEBHOOK_SECRET=whsec_XXXXXXXXXXXXXXXXXXXXXXXX

# -------------------------------------------------
# Stripe fee handling (optional – keep defaults if unsure)
# -------------------------------------------------
STRIPE_FEE_PERCENT=2.9
STRIPE_FEE_FIXED=0.20
STRIPE_FEE_GROSS_UP=true

# -------------------------------------------------
# Optional: payment webhook secret (if you have your own logic)
# -------------------------------------------------
DJANGO_PAYMENT_WEBHOOK_SECRET=CHANGE_THIS_TO_A_RANDOM_STRING

# -------------------------------------------------
# Bank‑transfer details (displayed on the “Pay by bank” page)
# -------------------------------------------------
COMPANY_BANK_NAME=Your Bank plc
COMPANY_BANK_ACCOUNT_NAME=Prebuilt Computers UK
COMPANY_BANK_ACCOUNT_NUMBER=12345678
COMPANY_BANK_SORT_CODE=12-34-56
COMPANY_BANK_IBAN=GB00BARC00000012345678
COMPANY_BANK_BIC=BARCGB22